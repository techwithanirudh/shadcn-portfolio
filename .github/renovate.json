{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "packageRules": [
      {
        "matchPackagePatterns": ["^@repo/"],
        "enabled": false
      }
    ],
    "updateInternalDeps": true,
    "rangeStrategy": "bump",
    "automerge": true,
    "npm": {
      "fileMatch": ["(^|/)package\\.json$", "(^|/)package\\.json\\.hbs$"]
    }
  }